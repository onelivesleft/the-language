{
    "name": "the-language",
    "displayName": "The Language",
    "description": "Support for the Jai language.",
    "version": "1.0.0",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/onelivesleft/the-language"
    },
    "publisher": "onelivesleft",
    "engines": {
        "vscode": "^1.28.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:blockMultiCursor.growUp",
        "onCommand:blockMultiCursor.growDown",
        "onCommand:blockMultiCursor.grow"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "blockMultiCursor.growUp",
                "title": "BlockMultiCursor: Grow Up"
            },
            {
                "command": "blockMultiCursor.growDown",
                "title": "BlockMultiCursor: Grow Down"
            },
            {
                "command": "blockMultiCursor.grow",
                "title": "BlockMultiCursor: Grow"
            }
        ],
        "keybindings": [
            {
                "command": "blockMultiCursor.growUp",
                "key": "ctrl+alt+shift+up",
                "mac": "cmd+alt+shift+up",
                "when": "editorTextFocus"
            },
            {
                "command": "blockMultiCursor.growDown",
                "key": "ctrl+alt+shift+down",
                "mac": "cmd+alt+shift+down",
                "when": "editorTextFocus"
            },
            {
                "command": "blockMultiCursor.grow",
                "key": "ctrl+alt+shift+right",
                "mac": "cmd+alt+shift+right",
                "when": "editorTextFocus"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.42",
        "@types/node": "^8.10.25",
        "tslint": "^5.8.0",
        "typescript": "^2.6.1",
        "vscode": "^1.1.36",
        "minimist": ">=1.2.3"
    },
    "keywords": [
        "Cursor",
        "Multicursor",
        "Multi"
    ]
}
